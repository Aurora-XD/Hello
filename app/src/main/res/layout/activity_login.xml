<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/aware"
        android:layout_width="148.9dp"
        android:layout_height="30.3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="88dp"
        android:src="@drawable/fill_1"
        android:scaleType="centerCrop"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aware"
        android:layout_marginTop="77.7dp"
        android:background="@drawable/edittext_background"
        android:textSize="12sp"
        android:textColor="@color/color_edit_text"
        android:hint="@string/button_username"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:textSize="12sp"
        android:textColor="@color/color_edit_text"
        android:hint="@string/button_password"
        android:inputType="textPassword"/>
    
    <TextView
        android:id="@+id/remember_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/password"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginTop="22.5dp"
        android:text="@string/button_remember_me"
        android:textColor="@color/color_prompt_text"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginTop="22.5dp"
        android:text="@string/button_forgot_password"
        android:textColor="@color/color_prompt_text"
        android:textSize="12sp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/login"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/remember_me"
        android:layout_marginTop="22.5dp"
        android:text="@string/button_login"
        android:textColor="@color/color_white"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:background="@drawable/login_background"
        android:foreground="@drawable/button_ripple"/>

    <TextView
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_connect"
        android:textColor="@color/color_connect"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login"
        android:layout_marginTop="26.5dp"/>

    <Button
        android:id="@+id/iamge_fb"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/login"
        app:layout_constraintTop_toBottomOf="@id/connect"
        android:layout_marginTop="29.5dp"
        android:background="@drawable/fb"
        android:scaleType="centerCrop"
        android:foreground="@drawable/button_ripple"/>

    <Button
        android:id="@+id/iamge_tw"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="@id/login"
        app:layout_constraintTop_toBottomOf="@id/connect"
        android:layout_marginTop="29.5dp"
        android:background="@drawable/tw"
        android:scaleType="centerCrop"
        android:foreground="@drawable/button_ripple"/>

    <Button
        android:id="@+id/signup"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iamge_fb"
        android:layout_marginTop="85.5dp"
        android:text="@string/button_email_signup"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textColor="@color/color_blue_background"
        android:background="@drawable/signup_background"
        android:foreground="?android:attr/selectableItemBackground"/>

</androidx.constraintlayout.widget.ConstraintLayout>