<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/aware"
        android:layout_width="148.9dp"
        android:layout_height="30.3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="88dp"
        android:src="@drawable/fill_1"
        android:scaleType="centerCrop"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aware"
        android:layout_marginTop="77.7dp"
        android:background="@drawable/edittext_background"
        android:textSize="12sp"
        android:textColor="#e4e4e4"
        android:hint="Username"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:textSize="12sp"
        android:textColor="#e4e4e4"
        android:hint="Password"
        android:inputType="textPassword"/>
    
    <TextView
        android:id="@+id/remember_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/password"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginTop="22.5dp"
        android:text="Remember me"
        android:textColor="#222222"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginTop="22.5dp"
        android:text="Forgot password?"
        android:textColor="#222222"
        android:textSize="12sp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/login"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/remember_me"
        android:layout_marginTop="22.5dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:background="@drawable/login_background"/>

    <TextView
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or connect with"
        android:textColor="#b2b2b2"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login"
        android:layout_marginTop="26.5dp"/>

    <ImageView
        android:id="@+id/iamge_fb"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/login"
        app:layout_constraintTop_toBottomOf="@id/connect"
        android:layout_marginTop="29.5dp"
        android:src="@drawable/fb"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iamge_tw"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="@id/login"
        app:layout_constraintTop_toBottomOf="@id/connect"
        android:layout_marginTop="29.5dp"
        android:src="@drawable/tw"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/signup"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iamge_fb"
        android:layout_marginTop="85.5dp"
        android:text="Signup with email"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textColor="#1f4ba5"
        android:background="@drawable/signup_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>